<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/detener"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#131417"
    tools:context=".MainActivity">

    <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="405dp"
            android:layout_height="70dp"
            android:layout_marginBottom="52dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">


        <Button
                android:id="@+id/play"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#131417"
                android:textSize="48sp"
                app:icon="@drawable/tocar"
                app:iconGravity="textEnd"
                app:iconTint="#FFEB3B"
        />
        <Button
                android:id="@+id/stop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#131417"
                android:textSize="48sp"
                app:icon="@drawable/stop"
                app:iconGravity="textEnd"
                app:iconTint="#FFEB3B"
        />
        <Button
                android:id="@+id/previous"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:shadowRadius="0.5"
                android:layout_weight="1"
                android:backgroundTint="#131417"
                android:textSize="48sp"
                app:icon="@drawable/back"
                app:iconGravity="textEnd"
                app:iconTint="#FFEB3B"
        />
        <Button
                android:id="@+id/forward"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#131417"
                android:textSize="48sp"
                app:icon="@drawable/next"
                app:iconGravity="textEnd"
                app:iconTint="#FFEB3B"
        />
    </LinearLayout>
    <TextView
            android:id="@+id/nomcancion"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_marginBottom="44dp"
            android:background="#131417"
            android:backgroundTintMode="add"
            android:drawableTint="#8865C8"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:textColor="#F0F0F0"
            android:textSize="28sp"
            android:visibility="visible"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/textView3"
        android:layout_width="368dp"
        android:layout_height="369dp"
        android:layout_marginTop="64dp"
        android:background="#131417"
        android:foreground="@drawable/musica"
        android:isScrollContainer="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>